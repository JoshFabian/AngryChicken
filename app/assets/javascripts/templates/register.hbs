<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <h3>Register</h3>
    <div class="well">
      <form role="form">
        <div class="form-group">
          <label for="username">Username</label>
          {{input type="text" id="username" class="form-control" value=username}}
        </div>
        <div class="form-group">
          <label for="email">Email address</label>
          {{input type="text" id="email" class="form-control" value=email}}
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          {{input type="password" id="password" class="form-control" value=password}}
        </div>
        <div class="form-group">
          <label for="password_confirmation">Password Confirmation</label>
          {{input type="password" id="password_confirmation" class="form-control" value=passwordConfirmation}}
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
