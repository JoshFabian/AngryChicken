              input placeholder="0"

          .col-md-3.bottom-filter
            .number-field
              label Cost
              input placeholder="0"
              label -
              input placeholder="0"
          
    .card-list.col-md-12
      .card-list-filter
        .search-bar.col-md-9.no-padding
          i class="ion-search search-icon"
          input placeholder="Search for cards by name, text or rarity ..."
        .col-md-3.no-padding
          .sort-by
            view Ember.Selectize contentBinding="controller.cardNames" selectionBinding="controller.containsCard" placeholder="SORT BY"
